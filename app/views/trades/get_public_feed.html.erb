<table class="table table-hover" class="table-responsive">
  <thead>
    <tr>
    <th>User Name</th>
      <th>Stock Name</th>
      <th>Price of Stock</th>
      <th>No of shares</th>
      <th>Bought/Sold</th>
      <th>Date of Purchase/Sold</th>
    </tr>
  </thead>
  <tbody>
  <% @public_feed.each do |trade| %>
    <tr>
      <td><%=  trade.user.username %>
      
      <div class="form-group">
      <label for="pwd">Password:</label>
      <input type="name" class="form-control" id="comment" placeholder="Enter comment" name="comment[]">
    </div>
   
    <button type="submit" class="btn btn-default">Add comment</button>
      
      </td>
      <td><%=  trade.stock_name %></td>
      <td> <%=  trade.stock_price %></td>
      <td> <%=  trade.no_of_shares %></td>
      <td> <%=  trade.order_type %></td>
      <td> <%=  trade.created_at %></td>
    </tr>
    <% end%>
    
  </tbody>
</table>