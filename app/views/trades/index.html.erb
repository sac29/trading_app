
  <h2>Enter the details of Stocks</h2>
  <form action="/trades" method = "post">
   <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token %>">
    <div class="form-group">
      <label for="stock">Stock Name:</label>
      <input type="name" class="form-control" id="stock" placeholder="Enter Stock Name" name="trades[stock_name]">
    </div>
    <div class="form-group">
      <label for="stock_price">Stock Price:</label>
      <input type="text" class="form-control" id="stock_price" placeholder="Enter Stock Price" name="trades[stock_price]">
    </div>
    <div class="form-group">
      <label for="stock_price">No of shares:</label>
      <input type="text" class="form-control" id="noofshares" placeholder="Enter No of share" name="trades[no_of_shares]">
    </div>
    
    <div class="form-group">
      <label for="sel1">Do you want to buy or sell:</label>
      <select class="form-control" id="sel1" name="trades[order_type]">
        <option>Buy</option>
        <option>Sell</option>
 </select>
      </div>
      <% if flash[:notice] %>
       <div class="alert alert-success">
       <strong>Success!</strong> <%= flash[:notice] %>
       </div> 
       <% end %>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>

 
  <div class="row">
      <hr class="hr-primary" />
      <ol class="breadcrumb bread-primary ">
         <li>MY TRADING DETAILS</li>
         
      </ol>
  </div>
 
  <table class="table table-hover" class="table-responsive">
  <thead>
    <tr>
      <th>Stock Name</th>
      <th>Price of Stock</th>
      <th>No of shares</th>
      <th>Bought/Sold</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
  <% @user_trades.each do |trade| %>
    <tr>
      <td><%=  trade.stock_name %></td>
      <td><%=  trade.stock_price %></td>
      <td><%=  trade.no_of_shares %></td>
      <td> <%=  trade.order_type %>  </td>
      <td> <%=  trade.created_at.to_date %>  </td>
    </tr>
    <% end%>
    
  </tbody>
</table>
<br>
